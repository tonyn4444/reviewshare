<% include ../partials/header %>

<h1>Edit Form</h1>

<div class="container">
	<div class="row">
			<h1 style="text-align: center;">Edit <%= campground.name %></h1>

			<div id="form" style="width: 30%; margin: 25px auto;">

				<form method="POST" action="/campgrounds/<%=campground._id%>/?_method=PUT">
					<div class="form-group">
						<input type="text" class="form-control" value="<%=campground.name%>" name="campground[name]" placeholder="Campground Name">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" value="<%=campground.image%>" name="campground[image]" placeholder="Image URL">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" value="<%=campground.location%>" name="campground[location]" placeholder="Location">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" value="<%=campground.description%>" name="campground[description]" placeholder="Description">
					</div>
					<div class="form-group">
						<input type="number" class="form-control" name="campground[price]" value="<%=campground.price %>" min="0.00" step="0.01" placeholder="Price">
					</div>					
					<div class="form-group">
						<button class="btn btn-lg btn-block btn-primary" type="submit">Submit</button>
					</div>
				</form>
				<a href="/campgrounds">Go Back</a>
			</div>
		</div>
	</div>

<% include ../partials/footer %>
