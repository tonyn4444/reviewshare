<% include ../partials/header %>
<br>

<div class="container-fluid" id="index-container">
<!-- <header id="index-header"> -->
		<div class="container text-center" id="index-header-content">
			<h1 id="header-h1">Welcome to ReviewShare!</h1>
			<p>View our handed-picked campgrounds from all over the world!</p>
			<p>
				<a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a new campground</a>
			</p>
		</div>
<!-- </header> -->
</div>

<div class="container" >

	<div class="row text-center">
		<div id="sub-heading" class="col-lg-12">
			<h2>Most popular campgrounds</h2><hr>
		</div>
	</div>

	<div class="row text-center" style="display: flex flex-wrap: wrap;">
		<% campgrounds.forEach(function(campground) { %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= campground.image %>">
					<div class="caption">
						<h4><%= campground.name %></h4>
					</div>
					<p>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		<% }); %>			
	</div>

</div>

<% include ../partials/footer %>
