<% include ../partials/header %>

<div class="container" id="comment-edit-container">
	<div class="row">
			<h1 style="text-align: center;">Edit Comment</h1>

			<div id="form" style="width: 30%; margin: 25px auto;">

				<form method="POST" action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT">
					<div class="form-group">
						<input type="text" class="form-control" name="comment[text]" value="<%= comment.text %>" placeholder="Text">
					</div>
	
					<div class="form-group">
						<button class="btn btn-md btn-block btn-primary" type="submit">Submit</button>
					</div>
				</form>
				<a href="/campgrounds">Go Back</a>
			</div>
		</div>
	</div>

<% include ../partials/footer %>
