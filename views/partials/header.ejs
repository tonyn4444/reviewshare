<!DOCTYPE html>
	<html>
		<head>
			<title>ReviewShare</title>
		<!-- Latest compiled and minified CSS -->
			<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
			<link rel="stylesheet" href="/stylesheets/styles.css">
			<script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
	</head>
	<body>
		<nav class="nav navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<a id="nav-content" class="navbar-brand" href="/">ReviewShare</a>

				</div>
				<div class="collapse navbar-collapse">
				<% if(currentUser) { %>
				<ul class="nav navbar-nav navbar-left">
						<li><a id="nav-content" href="/campgrounds">Campgrounds</a></li>
					</ul>
				<% } %>
					<ul class="nav navbar-nav navbar-right" id="nav-content">
					<% if(!currentUser) { %>

					
						<li><a id="nav-content" href="/login">Login</a></li>
						<li><a id="nav-content" href="/register">Sign Up</a></li>
						<% } else {%>
						<li><a id="nav-content" href="#">Signed In As <%= currentUser.username %></a></li>
						<li><a id="nav-content" href="/logout">Logout</a></li>
						<% } %>
					</ul>
				</div>
			</div>
		</nav>

		<div class="container">
			<% if(success && success.length > 0) { %>
				<div class="alert alert-success" role="alert">
					<%= success %>
				</div>
			<% }%>
			<% if(error && error.length > 0) { %>
				<div class="alert alert-danger" role="alert">
					<%= error %>
				</div>
			<% } %>			
		</div>



