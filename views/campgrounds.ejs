<% include partials/header %>
<br>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View our handed-picked campgrounds from all over the world!</p>
			<p>
				<a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a new campground</a>
			</p>
		</div>
	</header>

	<div class="row">
		<div class="col-lg-12 text-center">
			<h2>Our most popular campgrounds!</h2>
		</div>
	</div>

	<div class="row">
		<% campgrounds.forEach(function(campground) { %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= campground.image %>">
					<div class="caption text-center"><%= campground.name %></div>
				</div>
			</div>
		<% }); %>			
	</div>

</div>

<% include partials/footer %>
